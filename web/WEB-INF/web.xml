<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>patientSignup</servlet-name>
        <servlet-class>com.controller.patientSignup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>donarSignup</servlet-name>
        <servlet-class>com.controller.donarSignup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>patientLogin</servlet-name>
        <servlet-class>com.controller.patientLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminLogin</servlet-name>
        <servlet-class>com.controller.adminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>donarLogin</servlet-name>
        <servlet-class>com.controller.donarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bloodStockUpdater</servlet-name>
        <servlet-class>com.controller.bloodStockUpdater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>donarBloodDonation</servlet-name>
        <servlet-class>com.controller.donarBloodDonation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BloodRequest</servlet-name>
        <servlet-class>com.controller.bloodRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bloodDonationStatus</servlet-name>
        <servlet-class>com.controller.bloodDonationStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bloodRequestStatus</servlet-name>
        <servlet-class>com.controller.bloodRequestStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>donarBloodStockUpdater</servlet-name>
        <servlet-class>com.controller.donarBloodStockUpdater</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>patientSignup</servlet-name>
        <url-pattern>/patientSignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>donarSignup</servlet-name>
        <url-pattern>/donarSignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>patientLogin</servlet-name>
        <url-pattern>/patientLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminLogin</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>donarLogin</servlet-name>
        <url-pattern>/donarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bloodStockUpdater</servlet-name>
        <url-pattern>/bloodStockUpdater</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>donarBloodDonation</servlet-name>
        <url-pattern>/donarBloodDonation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BloodRequest</servlet-name>
        <url-pattern>/bloodRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bloodDonationStatus</servlet-name>
        <url-pattern>/bloodDonationStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bloodRequestStatus</servlet-name>
        <url-pattern>/bloodRequestStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>donarBloodStockUpdater</servlet-name>
        <url-pattern>/donarBloodStockUpdater</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--Landing Page-->
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
    <!--Error Page 404-->
    <error-page>
        <!-- Handle 404 errors (Page Not Found) -->
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
</web-app>
